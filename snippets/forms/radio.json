{
    "Bootstrap v5 Radio Default": {
        "prefix": "bs5-radio-default",
        "body": [
            "<div class=\"form-check\">",
            "\t<input class=\"form-check-input\" type=\"radio\" name=\"flexRadioDefault\" id=\"${1:flexRadioDefault1}\">",
            "\t<label class=\"form-check-label\" for=\"${1:flexRadioDefault1}\">",
            "\t\t${2:Default radio}",
            "\t</label>",
            "</div>"
        ],
        "description": "Creates Bootstrap v5 default Radio template"
    },
    "Bootstrap v5 Radio checked": {
        "prefix": "bs5-radio-checked",
        "body": [
            "<div class=\"form-check\">",
            "\t<input class=\"form-check-input\" type=\"radio\" name=\"flexRadioDefault\" id=\"${1:flexRadioDefault1}\" checked>",
            "\t<label class=\"form-check-label\" for=\"${1:flexRadioDefault1}\">",
            "\t\t${2:Default checked radio}",
            "\t</label>",
            "</div>"
        ],
        "description": "Creates Bootstrap v5 Checked Radio template"
    },
    "Bootstrap v5 Radio disabled": {
        "prefix": "bs5-radio-disabled",
        "body": [
            "<div class=\"form-check\">",
            "\t<input class=\"form-check-input\" type=\"radio\" name=\"flexRadioDisabled\" id=\"${1:flexRadioDisabled1}\" disabled>",
            "\t<label class=\"form-check-label\" for=\"${1:flexRadioDisabled1}\">",
            "\t\t${2:Disabled radio}",
            "\t</label>",
            "</div>"
        ],
        "description": "Creates Bootstrap v5 Disabled Radio template"
